<h2>Create An Offer</h2>


<form action="/api/users" method="get">
  <label for="category">Select Category</label>
  <input list="categories" name="category">
  <datalist id="categories">
    <option value="Baby/Senior Sitting">
    <option value="Cooking">
    <option value="Cleaning">
    <option value="Handy Man">
    <option value="Instructional">
    <option value="Pet Care">
    <option value="Tech Services">
    <option value="Transportation">
    <option value="Yard Work">
  </datalist>
  <label for="description">Description</label>
    <input class="text" name="description" type="text" />
    <label for="cost"># of hours offered</label>
    <input name="cost" type="number" />
  <input type="submit" id = "serv">
</form>
<hr>

<h2>Current Offers:</h2>
<ul id="currentOffer">
  <table>
    <thead> 
        <th>Name</th> 
        <th>Description</th> 
        <th>Take This Offer</th> 
    </thead> 
    <tbody> 
      {{#offers}}         
        <tr>           
          <td>{{category}}</td> 
          <td>{{description}}</td> 
          <td><button id = "serv" type="submit">Send Request</button></td>
        </tr> 
      {{/offers}}
    </tbody> 
</table> 


